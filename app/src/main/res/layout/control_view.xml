<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--背景-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/background"
        android:scaleType="center"/>

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
        <!--android:text="灯光1"-->
        <!--android:id="@+id/lightName"-->
        <!--android:layout_marginTop="5dp" />-->

    <!--返回-->
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/back_btn"
        android:background="@drawable/back_bnt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" />

    <!--灯光名字-->
    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lightName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!--一堆黄点-->
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/blueDot1"
        android:src = "@drawable/blue_dot"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/blueDot2"
        android:src = "@drawable/blue_dot"
        android:layout_alignLeft="@+id/blueDot1"
        android:layout_alignBottom="@+id/blueDot1"
        android:layout_marginLeft="78dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/blueDot3"
        android:src = "@drawable/blue_dot"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/blueDot1"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/blueDot4"
        android:src = "@drawable/blue_dot"
        android:layout_alignLeft="@+id/blueDot3"
        android:layout_alignBottom="@+id/blueDot3"
        android:layout_marginLeft="78dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/blueDot5"
        android:src = "@drawable/blue_dot"
        android:layout_alignBottom="@+id/blueDot4"
        android:layout_alignRight="@+id/seekBar"
        android:layout_marginRight="5dp"/>

    <!--一堆绿点-->
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/greenDot1"
        android:src = "@drawable/green_dot"
        android:layout_alignLeft="@+id/seekBar2"
        android:layout_alignBottom="@+id/seekBar2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/greenDot2"
        android:src = "@drawable/green_dot"
        android:layout_alignLeft="@+id/greenDot1"
        android:layout_alignBottom="@+id/greenDot1"
        android:layout_marginLeft="78dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/greenDot3"
        android:src = "@drawable/green_dot"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/greenDot1"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/greenDot4"
        android:src = "@drawable/green_dot"
        android:layout_alignLeft="@+id/greenDot3"
        android:layout_alignBottom="@+id/greenDot3"
        android:layout_marginLeft="78dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/greenDot5"
        android:src = "@drawable/green_dot"
        android:layout_alignBottom="@+id/greenDot3"
        android:layout_alignRight="@+id/seekBar2"
        android:layout_marginRight="5dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="12dp"
        android:id="@+id/seekBar"
        android:scrollIndicators="none"
        android:progressDrawable="@drawable/seekbar_style1"
        android:thumb="@drawable/seekbar_thumb"
        android:progress="70"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="228dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="12dp"
        android:id="@+id/seekBar2"
        android:progressDrawable="@drawable/seekbar_style2"
        android:thumb="@drawable/thumb"
        android:clickable="true"
        android:progress="50"
        android:layout_alignTop="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/switchBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/switch_enabled"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageCold"
        android:layout_marginLeft="28dp"
        android:background="@drawable/lengguang_guan"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="85dp"
        android:id="@+id/imageNormal"
        android:background="@drawable/ziranguang_guan"
        android:layout_alignTop="@+id/imageCold"
        android:layout_alignLeft="@+id/imageCold"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="85dp"
        android:id="@+id/imageWarm"
        android:background="@drawable/nuanguang_guan"
        android:layout_alignLeft="@+id/imageNormal"
        android:layout_alignTop="@+id/imageNormal"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="85dp"
        android:id="@+id/imageSleep"
        android:background="@drawable/shengdian_guan"
        android:layout_alignLeft="@+id/imageWarm"
        android:layout_alignTop="@+id/imageNormal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0%"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0%"
        android:id="@+id/textView2"
        android:layout_alignStart="@+id/textView"
        android:layout_alignBottom="@+id/seekBar2"
        android:layout_marginBottom="40dp" />

</RelativeLayout>