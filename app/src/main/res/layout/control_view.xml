<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/background"
        android:scaleType="center"/>

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
        <!--android:text="灯光1"-->
        <!--android:id="@+id/lightName"-->
        <!--android:layout_marginTop="5dp" />-->
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/back_btn"
        android:background="@drawable/back_bnt2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/lightName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开关"
        android:id="@+id/switch1"
        android:textSize="20dp"
        android:showText="false"
        android:singleLine="false"
        android:splitTrack="false"
        android:layout_above="@+id/seekBar"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_alignStart="@+id/seekBar"
        android:layout_marginBottom="41dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="10dp"
        android:id="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="215dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:scrollIndicators="none"
        android:progressDrawable="@drawable/seekbar_style"
        android:progress="60" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="10dp"
        android:id="@+id/seekBar2"
        android:layout_alignTop="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:clickable="true"
        android:progress="0" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageCold"
        android:layout_marginLeft="30dp"
        android:background="@color/accent_material_dark"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="90dp"
        android:id="@+id/imageNormal"
        android:background="@color/light_yellow"
        android:layout_alignTop="@+id/imageCold"
        android:layout_alignLeft="@+id/imageCold"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="210dp"
        android:id="@+id/imageWarm"
        android:background="@android:color/holo_orange_light"
        android:layout_alignTop="@+id/imageNormal"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="300dp"
        android:id="@+id/imageSleep"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/imageNormal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0%"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0%"
        android:id="@+id/textView2"
        android:layout_alignStart="@+id/textView"
        android:layout_alignBottom="@+id/seekBar2"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="冷光"
        android:id="@+id/textView3"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/seekBar"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_marginLeft="-40dp"
        android:layout_marginBottom="3dp"
        android:textSize="22dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暖光"
        android:id="@+id/textView4"
        android:layout_alignStart="@+id/seekBar2"
        android:layout_alignBottom="@+id/seekBar2"
        android:layout_marginLeft="-40dp"
        android:layout_marginBottom="3dp"
        android:textSize="22dp"
        android:textStyle="italic" />

</RelativeLayout>